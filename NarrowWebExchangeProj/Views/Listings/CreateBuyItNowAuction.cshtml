@model NarrowWebExchangeProj.Models.Listing

@{
    ViewData["Title"] = "CreateBuyItNowAuction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateBuyItNowAuction</h1>

<h4>Listing</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBuyItNowAuction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Make" class="control-label">Make</label>
                <select asp-for="Make" class="form-control" asp-items="ViewBag.Makes"></select>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hours" class="control-label"></label>
                <input asp-for="Hours" class="form-control" />
                <span asp-validation-for="Hours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Width" class="control-label"></label>
                <input asp-for="Width" class="form-control" />
                <span asp-validation-for="Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumColors" class="control-label"></label>
                <input asp-for="NumColors" class="form-control" />
                <span asp-validation-for="NumColors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumDieStations" class="control-label"></label>
                <input asp-for="NumDieStations" class="form-control" />
                <span asp-validation-for="NumDieStations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Condition" class="control-label">Condition</label>
                <select asp-for="Condition" class="form-control" asp-items="ViewBag.Conditions"></select>
            </div>
            <div class="form-group">
                <label asp-for="ToolingIncluded" class="control-label"></label>
                <textarea name="ToolingIncluded" class="form-control" rows="5"></textarea>
                <span asp-validation-for="ToolingIncluded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeaturesAndComments" class="control-label"></label>
                <textarea asp-for="FeaturesAndComments" class="form-control" rows="5"></textarea>
                <span asp-validation-for="FeaturesAndComments" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BuyItNowPrice" class="control-label"></label>
                <input asp-for="BuyItNowPrice" class="form-control" />
                <span asp-validation-for="BuyItNowPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReservePrice" class="control-label"></label>
                <input asp-for="ReservePrice" class="form-control" />
                <span asp-validation-for="ReservePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ListingDateTime" class="control-label"></label>
                <input asp-for="ListingDateTime" class="form-control" />
                <span asp-validation-for="ListingDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ListingDays" class="control-label"></label>
                <input asp-for="ListingDays" class="form-control" />
                <span asp-validation-for="ListingDays" class="text-danger"></span>
            </div>
            <p>Upload Images For Your Listing Below</p>
            <div class="custom-file">

                <input asp-for="Image1" type="file" class="custom-file-input" id="customFile">
                <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
            <br />
            <div class="custom-file">

                <input asp-for="Image2" type="file" class="custom-file-input" id="customFile">
                <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
            <br />
            <div class="custom-file">

                <input asp-for="Image3" type="file" class="custom-file-input" id="customFile">
                <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
            <br />
            <div class="custom-file">

                <input asp-for="Image4" type="file" class="custom-file-input" id="customFile">
                <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

