@model NarrowWebExchangeProj.Models.Listing

@{
    ViewData["Title"] = "EditBuyItNowAuction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details for this BuyItNowAuction Listing</h1>


<h4>Listing</h4>
<hr />
<p><b>Date Time Now :</b> @DateTime.Now <b>  Listing Ends:</b> @Html.DisplayFor(model => model.ListingEndDateTime)</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBuyItNowAuction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ListingId" />
            <h4>To Purchase <b>at the BuyItNow price</b>, Check Box and Hit BuyItNow Button</h4>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ItemSold" />
                    Check This Box To BuyItNow!
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="BuyItNow!" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-2">
        <center>
            <h1>OR</h1>
        </center>
    </div>
    
    <div class="col-4">
        <form asp-action="EditBuyItNowAuction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ListingId" />
            <center>
                <h4>Place a Bid on This Item</h4>
                <div class="form-group">
                    @*<label asp-for="HighBidPrice" class="control-label"></label>*@
                    <input asp-for="HighBidPrice" class="form-control" />
                    <span asp-validation-for="HighBidPrice" class="text-danger"></span>
                   
                        <p>Price Must Be Higher Than:  @Html.DisplayFor(model => model.CurrentBid)</p>
                   
                    <div class="form-group">
                        <input type="submit" value="Submit Bid" class="btn btn-primary" />
                    </div>
                </div>
            </center>
        </form>
    </div>

    

</div>
<hr />



<div class="row">
    <div class="col-3">
        <img src="@Url.Content(Model.Image1)" style="height:160px;width:210px;" alt="no image" />
    </div>
    <div class="col-9">
        <table id="searchTable" style="width:100%">
            <tr>
                <th>Listing Type</th>
                <th>BuyItNowPrice</th>
                <th>Reserve Price</th>
                <th>Current Bid</th>
                <th>Number of Bids</th>
                <th>Reserve Met?</th>
            </tr>
            <tr>
                <td>@Html.DisplayFor(model => model.ListingType)</td>
                <td>@Html.DisplayFor(model => model.BuyItNowPrice)</td>
                <td>Hidden</td>
                <td>@Html.DisplayFor(model => model.CurrentBid)</td>
                <td>@Html.DisplayFor(model => model.NumberOfBids)</td>
                <td>@Html.DisplayFor(model => model.ReserveMet)</td>
            </tr>
        </table>
        <table id="searchTable" style="width:100%">
            <tr>
                <th>Make</th>
                <th>Model</th>
                <th>Width</th>
                <th>Hours</th>
                <th>Year</th>
                <th>Print Stations</th>
                <th>Die Stations</th>
                <th>Condition</th>
            </tr>
            <tr>
                <td>@Html.DisplayFor(model => model.Make)</td>
                <td>@Html.DisplayFor(model => model.Model)</td>
                <td>@Html.DisplayFor(model => model.Width)</td>
                <td>@Html.DisplayFor(model => model.Hours)</td>
                <td>@Html.DisplayFor(model => model.Year)</td>
                <td>@Html.DisplayFor(model => model.NumColors)</td>
                <td>@Html.DisplayFor(model => model.NumDieStations)</td>
                <td>@Html.DisplayFor(model => model.Condition)</td>
            </tr>
        </table>
    </div>
</div>
<hr />
<div class="row">
    <center>
        <img src="@Url.Content(Model.Image1)" style="height:160px;width:210px; border:5px white" alt="no image" />
        <img src="@Url.Content(Model.Image2)" style="height:160px;width:210px; border:5px white" alt="no image" />
        <img src="@Url.Content(Model.Image3)" style="height:160px;width:210px; border:5px white" alt="no image" />
        <img src="@Url.Content(Model.Image4)" style="height:160px;width:210px; border:5px white" alt="no image" />
    </center>
   
</div>
<hr />
<div class="row">

    <table id="searchTable" style="width:100%">
        <tr>
            <th>Tooling Included</th>
            <th>Features and Seller Comments</th>
        </tr>
        <tr>
            <td>@Html.DisplayFor(model => model.ToolingIncluded)</td>
            <td>@Html.DisplayFor(model => model.FeaturesAndComments)</td>
        </tr>
    </table>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>